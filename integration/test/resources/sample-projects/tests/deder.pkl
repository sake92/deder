amends "https://sake92.github.io/deder/config/DederProject.pkl"

const local function testModule(name: String) = new ScalaTestModule {
  id = name
  root = name
  scalaVersion = "3.7.1"
}

local const junit4 = (testModule("junit4")) {
  deps {
    "com.github.sbt:junit-interface:0.13.2"
    "junit:junit:4.13"
  }
}

local const junit5 = (testModule("junit5")) {
  deps {
    "com.github.sbt.junit:jupiter-interface:0.16.0"
    "org.junit.jupiter:junit-jupiter-api:5.10.1"
  }
}

local const scalatest = (testModule("scalatest")) {
  deps {
    "org.scalatest::scalatest:3.2.19"
  }
}

local const munit = (testModule("munit")) {
  deps {
    "org.scalameta::munit:1.2.1"
  }
}

local const utest = (testModule("utest")) {
  deps {
    "com.lihaoyi::utest:0.10.0-RC1"
  }
}

local const weaver = (testModule("weaver")) {
  deps {
    "org.typelevel::weaver-cats:0.11.3"
  }
}

local const ztest = (testModule("ztest")) {
  deps {
    "dev.zio::zio-test:2.1.24"
    "dev.zio::zio-test-sbt:2.1.24"
  }
}

modules {
  junit4
  junit5
  scalatest
  munit
  utest
  weaver
  ztest
}
