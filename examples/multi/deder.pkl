amends "../../config/DederProject.pkl"

local const baseModule = new ScalaModule {
  scalaVersion = "2.13.11"
}

local const common = (baseModule) {
  id = "common"
  deps = new {
    "org.jsoup:jsoup:1.21.2"
  }
}

local const frontend = (baseModule) { id = "frontend"; moduleDeps = new { common } }

local const backend = (baseModule) { id = "backend"; moduleDeps = new { common } }

local const uber = (baseModule) {
  id = "uber";
  moduleDeps = new { frontend; backend }
  mainClass = "uber.Main"
}

modules = new {
  common
  frontend
  backend
  uber
}
